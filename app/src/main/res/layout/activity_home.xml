    <androidx.cardview.widget.CardView
        android:id="@+id/add_students_cardview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@+id/meeting_history_card"
        app:layout_constraintStart_toStartOf="@+id/meeting_history_card"
        app:layout_constraintEnd_toEndOf="@+id/meeting_history_card"
        app:layout_constraintRight_toRightOf="@+id/meeting_history_card"
        app:layout_constraintTop_toBottomOf="@id/saved_recordings_text">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/add_student_in_classes"
                android:scaleType="centerInside"
                android:src="@drawable/meeting_hostory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/add_student_in_classes_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Add Users in classes"
        android:textColor="@color/colorBlack"
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="@id/add_students_cardview"
        app:layout_constraintRight_toRightOf="@id/add_students_cardview"
        app:layout_constraintTop_toBottomOf="@id/add_students_cardview" />


    <androidx.cardview.widget.CardView
        android:id="@+id/attendences_cardview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@+id/saved_recordings_card"
        app:layout_constraintStart_toStartOf="@+id/saved_recordings_card"
        app:layout_constraintEnd_toEndOf="@+id/saved_recordings_card"
        app:layout_constraintRight_toRightOf="@+id/saved_recordings_card"
        app:layout_constraintTop_toBottomOf="@id/saved_recordings_text">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/attendence_in_classes"
                android:scaleType="centerInside"
                android:src="@drawable/meeting_hostory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/attendences_in_classes_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Users Attendence"
        android:textColor="@color/colorBlack"
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="@id/attendences_cardview"
        app:layout_constraintRight_toRightOf="@id/attendences_cardview"
        app:layout_constraintTop_toBottomOf="@id/attendences_cardview" />


</androidx.constraintlayout.widget.ConstraintLayout>